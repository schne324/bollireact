{
  "name": "bollireact",
  "version": "1.1.1",
  "description": "my personal react project boilerplate thingy",
  "author": "Harris Schneiderman",
  "repository": "schne324/bollireact",
  "license": "MIT",
  "private": false,
  "bin": {
    "bollireact": "./index.js"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "inquirer": "^6.2.0"
  },
  "devDependencies": {
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^3.1.0",
    "husky": "^1.1.1",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
